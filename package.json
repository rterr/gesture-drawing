{
  "name": "gesture-drawing",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server/server",
    "heroku-postbuild": "npm run build",
    "test": "mocha --compilers js:babel-register test/**/*.js*",
    "mkdir": "mkdir -p build",
    "clean": "rm -rf build",
    "assets": "cp -R images/ build/images/",
    "build": "npm run clean && npm run mkdir && npm run assets && npm run build:html && npm run build:js && npm run build:css",
    "serve": "lite-server",
    "watch": "npm run watch:html & npm run watch:js & npm run watch:css",
    "watch:html": "npm run build:html && chokidar index.html -c 'npm run build:html'",
    "build:html": "npm run clean:html && cp index.html build/",
    "clean:html": "rm -f build/index.html",
    "watch:js": "npm run build:js && webpack --watch",
    "build:js": "npm run clean:js && webpack",
    "clean:js": "rm -f build/$npm_package_name.$npm_package_version.js build/$npm_package_name.$npm_package_version.js.map",
    "watch:css": "npm run build:css && chokidar css/*.scss -c 'npm run build:css'",
    "build:css": "node-sass --output-style compressed -o build/css css",
    "dev": "npm run watch & npm run serve"
  },
  "engines": {
    "node": "4.4.7",
    "npm": "2.15.8"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.3.1",
    "react-addons-update": "^15.3.2",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.7.0",
    "react-slick": "^0.14.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "slick-carousel": "^1.6.0"
  },
  "devDependencies": {
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-register": "^6.9.0",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.4.0",
    "eslint-plugin-react": "^6.2.0",
    "less": "^2.7.1",
    "lite-server": "^2.2.2",
    "node-sass": "^3.10.1",
    "webpack": "^1.13.1"
  }
}
